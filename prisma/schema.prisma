
generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Blog {
  id       Int      @id @default(autoincrement())
  title    String
  excerpt  String
  image    String
  date     DateTime
  content  String
}
model News {
  id      Int      @id @default(autoincrement())
  title   String
  summary String
  image   String
  date    DateTime
  content String
}

model Homily {
  id        String   @id @default(uuid())
  title     String
  content   String
  date      DateTime @default(now())
  userId    String
  author    User     @relation(fields: [userId], references: [id])
}

model User {
  id         String     @id @default(uuid())
  name       String
  email      String     @unique
  password   String     // hashed
  role       UserRole   @default(PRIEST)
  avatar     String?
  bio        String?
  title      String?     // e.g., "His Lordship"
  isActive   Boolean     @default(true)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  // Relations
  homilies   Homily[]    // Only relevant for bishops
}

enum UserRole {
  ADMIN
  BISHOP
  PRIEST
}
model Clergy {
  id        String   @id @default(uuid())
  name      String
  role      String
  parish   String
  address String
  phone     String?
  extra     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


