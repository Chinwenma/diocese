generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Blog {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  excerpt  String
  image    String
  date     DateTime
  content  String
}

model News {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  summary String
  image   String
  date    DateTime
  content String
}

model Homily {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  date      DateTime @default(now())
  userId    String   @db.ObjectId
  author    User     @relation(fields: [userId], references: [id])
}

model User {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  email      String     @unique
  password   String
  role       UserRole   @default(PRIEST)
  avatar     String?
  bio        String?
  title      String?
  isActive   Boolean    @default(true)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  homilies   Homily[]
}

enum UserRole {
  ADMIN
  BISHOP
  PRIEST
}

model Clergy {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  role      String
  parish    String
  address   String
  phone     String?
  extra     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
